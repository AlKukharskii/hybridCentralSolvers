FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho1|rho2|volumeFraction1|U|T|p_rgh).*"
    {
        solver          PBiCGStab;
        preconditioner	DILU;
        tolerance       1e-9;
        relTol          0.0;
        cAlpha          1.0;
        nAlphaCorr      1;
    }

    "(pcorr|pcorrFinal)"
    {
        solver          PCG;
        preconditioner	none;
        tolerance       1e-9;
        relTol          0.0;
    }
}

PIMPLE
{

    nOuterCorrectors            3;
    nCorrectors                 1;
    pcorrRefCell                1;
    pcorrRefValue               0.0;


    kappaFunction
    {
        type standardMachToAcCourantRatio;
        standardMachToAcCourantRatioCoeffs
        {
            writeMaxMin false;
        }
    }
}

