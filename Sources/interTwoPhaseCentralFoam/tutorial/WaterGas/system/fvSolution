FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "(rho1|rho2|volumeFraction1|U|T|p).*"
    {
        solver          PBiCGStab;
        preconditioner	DILU;
        tolerance       1e-9;
        relTol          0.0;
    }
}

PIMPLE
{

    nOuterCorrectors            7;
    nCorrectors                 1;

    kappaFunction
{
    type standardMachToAcCourantRatio;

    standardMachToAcCourantRatioCoeffs
    {
      writeMaxMin true;
    }
}
}

